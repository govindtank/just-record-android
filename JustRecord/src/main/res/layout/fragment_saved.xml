<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ListView android:id="@+id/saved_listView_list"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:listSelector="@drawable/list_item_saved_selector"
            android:divider="@color/saved_button_background"
            android:dividerHeight="1dp"/>
        <TextView android:id="@+id/saved_textView_info"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_centerInParent="true"
            android:text="@string/saved_textView_info"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="5dp"
        android:background="@color/saved_button_background">
        <TextView android:id="@+id/saved_textView_playback_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/record_textView_timer_initial"
            android:textColor="@android:color/holo_red_light"
            android:textSize="12sp"/>
        <Space
            android:layout_width="5dp"
            android:layout_height="match_parent" />
        <SeekBar android:id="@+id/saved_seekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView android:id="@+id/saved_textView_playback_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/record_textView_timer_initial"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/transparent"/>
    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@android:color/transparent">
        <Button
            android:id="@+id/saved_button_filter_date"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/saved_button_filter_date_title"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:background="@drawable/saved_button_filter_selector"
            android:onClick=""/>
        <Space
            android:layout_height="match_parent"
            android:layout_width="1dp"/>
        <Button
            android:id="@+id/saved_button_filter_name"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/saved_button_filter_name_title"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:background="@drawable/saved_button_filter_selector"/>
        <Space
            android:layout_height="match_parent"
            android:layout_width="1dp"/>
        <Button
            android:id="@+id/saved_button_filter_type"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/saved_button_filter_type_title"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:background="@drawable/saved_button_filter_selector"/>
        <!--<Button-->
            <!--android:id="@+id/saved_button_filter_length"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_weight="1"-->
            <!--android:text="@string/saved_button_filter_length_title"-->
            <!--android:textStyle="bold"-->
            <!--android:textSize="12sp"-->
            <!--android:textColor="@android:color/white"-->
            <!--android:background="@drawable/saved_button_filter_selector"/>-->
        <Space
            android:layout_height="match_parent"
            android:layout_width="1dp"/>
        <Button
            android:id="@+id/saved_button_filter_size"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/saved_button_filter_size_title"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:background="@drawable/saved_button_filter_selector"/>
    </LinearLayout>
</LinearLayout>